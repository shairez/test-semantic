{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true, // generate .d.ts files
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "lib": ["es2015", "es2016"],
    "pretty": true,
    "strict": true,
    "outDir": "dist"
  },
  "include": ["src"]
}
